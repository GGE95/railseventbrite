<%= form_with(model: @event, local: true) do |form| %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<% if flash[:notice] %>
  <div class="alert alert-danger"><%= flash[:notice] %></div>
<% end %>

  <div class="form-group">
    <%= form.label :title, "Titre" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_date, "Date de début" %>
    <%= form.datetime_local_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :duration, "Durée" %>
    <%= form.number_field :duration, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price, "Prix" %>
    <%= form.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :location, "Adresse" %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= link_to "Abandonner", root_path, class: "btn btn-outline-secondary" %>
  </div>
  <%= form.submit "Créer", class: "btn btn-primary" %>
<% end %>

